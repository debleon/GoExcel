<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/dardo"
        android:contentDescription="@string/icono_desafio_generico" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/txtTituloDesafio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título del desafío"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtDescripcionDesafio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del desafío"
            android:textSize="14sp"
            android:textColor="#7A7A7A" />
    </LinearLayout>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_iniciar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#57DEB3" />
</LinearLayout>
