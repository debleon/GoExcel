<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFFFE5">

    <!-- Encabezado -->
    <RelativeLayout
        android:id="@+id/headerVista1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/ruta1_header"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:contentDescription="@string/volver" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloModulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M칍DULO 1"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iconModulo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/informacion"
            android:contentDescription="@string/icono_modulo" />
    </RelativeLayout>

    <!-- Contenedor principal en Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerVista1"
        android:layout_above="@id/bottomNav"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#B2FFDA"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游닂 Informaci칩n del M칩dulo"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_gravity="center">

                <!-- Caja 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游댌 쯈u칠 aprender치s?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游늷 Conocer치s los fundamentos de Excel: qu칠 es una celda, c칩mo funcionan las filas y columnas, c칩mo realizar operaciones b치sicas como SUMA, PROMEDIO, MAX y MIN. Iniciar치s tu camino para automatizar c치lculos simples."
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Caja 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游꿢 쯇ara qu칠 sirve?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游눠 Este m칩dulo es tu primer paso en Excel. Aprender치s a organizar datos, hacer sumas autom치ticas y obtener promedios f치cilmente. Es la base para trabajar con datos sin necesidad de conocimientos previos."
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Caja 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游닄 쮺칩mo aprender치s?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游 Mediante lecciones cortas, visuales y pr치cticas paso a paso. Iniciar치s reconociendo el entorno de Excel, luego practicar치s funciones b치sicas y resolver치s ejercicios guiados. Al final realizar치s una evaluaci칩n interactiva que consolidar치 todo lo aprendido."
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Men칰 inferior -->
    <RelativeLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:weightSum="5">

            <ImageView
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/circle_bg"
                android:contentDescription="@string/perfil"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/circle_bg"
                android:contentDescription="@string/inicio"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/user" />

            <ImageView
                android:id="@+id/nav_logo"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginTop="-7dp"
                android:background="@drawable/circle_bg"
                android:contentDescription="@string/goexcel"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/nav_stats"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/statistics"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="@string/estadisticas" />

            <ImageView
                android:id="@+id/nav_trophy"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/circle_bg"
                android:contentDescription="@string/favoritos"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/favorito" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>


