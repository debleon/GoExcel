<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/modulo2_background">

    <!-- Encabezado -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/modulo2_header"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:contentDescription="@string/volver" />

        <TextView
            android:id="@+id/tvTituloPaso4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod2_paso4_titulo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/texto_oscuro"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- ScrollView con retos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/enunciado1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_paso4_reto1"
                        android:textSize="15sp"
                        android:textColor="@color/texto_gris" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/respuesta1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mod2_paso4_hint"
                            android:inputType="text"
                            android:textColor="@android:color/black"
                            android:paddingEnd="40dp"
                            android:backgroundTint="@color/texto_gris" />

                        <ImageView
                            android:id="@+id/icono1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/enunciado2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_paso4_reto2"
                        android:textSize="15sp"
                        android:textColor="@color/texto_gris" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/respuesta2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mod2_paso4_hint"
                            android:inputType="text"
                            android:textColor="@android:color/black"
                            android:paddingEnd="40dp"
                            android:backgroundTint="@color/texto_gris" />

                        <ImageView
                            android:id="@+id/icono2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/enunciado3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_paso4_reto3"
                        android:textSize="15sp"
                        android:textColor="@color/texto_gris" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/respuesta3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mod2_paso4_hint"
                            android:inputType="text"
                            android:textColor="@android:color/black"
                            android:paddingEnd="40dp"
                            android:backgroundTint="@color/texto_gris" />

                        <ImageView
                            android:id="@+id/icono3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/enunciado4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_paso4_reto4"
                        android:textSize="15sp"
                        android:textColor="@color/texto_gris" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/respuesta4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mod2_paso4_hint"
                            android:inputType="text"
                            android:textColor="@android:color/black"
                            android:paddingEnd="40dp"
                            android:backgroundTint="@color/texto_gris" />

                        <ImageView
                            android:id="@+id/icono4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/enunciado5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_paso4_reto5"
                        android:textSize="15sp"
                        android:textColor="@color/texto_gris" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/respuesta5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mod2_paso4_hint"
                            android:inputType="text"
                            android:textColor="@android:color/black"
                            android:paddingEnd="40dp"
                            android:backgroundTint="@color/texto_gris" />

                        <ImageView
                            android:id="@+id/icono5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnValidarRetos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_paso4_btn"
        android:layout_margin="16dp"
        android:backgroundTint="@color/modulo2_header"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>
