<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/modulo2_background">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/modulo2_header"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:contentDescription="@string/volver" />

        <TextView
            android:id="@+id/tvTituloPaso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mod2_paso2_titulo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/texto_oscuro"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Indicador de progreso -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_paso2_progreso"
        android:textAlignment="viewEnd"
        android:padding="12dp"
        android:textSize="14sp"
        android:textColor="#888888" />

    <!-- Contenido en Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_funcion_suma"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_gris" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_frase_suma"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:textColor="#E65100"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/motivacion_suma"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_funcion_si"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_gris" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_frase_si"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:textColor="#E65100"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/motivacion_si"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_funcion_buscarv"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_gris" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_frase_buscarv"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:textColor="#E65100"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/motivacion_buscarv"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_funcion_contar_si"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_gris" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_frase_contar_si"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:textColor="#E65100"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/motivacion_contar_si"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_funcion_si_error"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/texto_gris" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mod2_frase_si_error"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:textColor="#E65100"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/motivacion_si_error"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Botón inferior -->
    <Button
        android:id="@+id/btnLeccionAprendida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_paso2_btn"
        android:layout_margin="16dp"
        android:backgroundTint="@color/modulo2_header"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>