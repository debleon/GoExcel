<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/modulo1_background"
    android:padding="0dp">

    <!-- ENCABEZADO GOEXCEL -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/modulo1_header"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/back"
            android:contentDescription="@string/volver" />

        <TextView
            android:id="@+id/tvTituloPaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paso1_titulo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/texto_oscuro"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Indicador de Progreso -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paso1_progreso"
        android:textAlignment="viewEnd"
        android:padding="12dp"
        android:textSize="14sp"
        android:textColor="#888888" />

    <!-- CONTENIDO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paso1_intro"
            android:textSize="16sp"
            android:textColor="@color/texto_oscuro"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvContenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paso1_contenido"
            android:textSize="15sp"
            android:textColor="@color/texto_gris"
            android:layout_marginBottom="16dp" />

        <WebView
            android:id="@+id/webViewExcel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnLeccionAprendida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lección aprendida ✅"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/modulo1_header"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>



